<div class="item-wrap flex {{post_class}} {{#if feature_image}}is-image{{/if}}">
	<article>
		<a href="{{url}}" class="item-link-overlay" aria-label="{{title}}"></a>
		{{#if feature_image}}
		<div class="item-image" style="background-image: url({{feature_image}})"></div>
		{{/if}}
		<h2><a href="{{url}}" class="white">{{title}}</a></h2>
		<div class="item-meta white {{#if primary_tag}}is-primary-tag{{/if}}">
			<span>{{t "by"}}</span>
			{{#has author="count:1"}}
			{{#primary_author}}
			<a class="author-name white" href="{{url}}">{{name}}</a>
			{{/primary_author}}
			{{else}}
			{{#has author="count:2"}}
			{{authors separator=" <span>&</span> "}}
			{{else}}
			{{#has author="count:>2"}}
			{{#primary_author}}
			<a class="author-name white" href="{{url}}">{{name}}</a><span> {{t "and others"}}</span>
			{{/primary_author}}
			{{/has}}
			{{/has}}
			{{/has}}
			<time datetime="{{date format="YYYY-MM-DD"}}">{{date published_at timeago="true"}}</time>
		</div>
		{{#primary_tag}}
		<a class="primary-tag global-tag white" href="{{url}}">{{name}}</a>
		{{/primary_tag}}
	</article>
</div>